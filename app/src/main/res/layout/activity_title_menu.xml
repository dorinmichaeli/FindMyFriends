<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TitleMenuActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:contentDescription="Google Logo"
        android:padding="24dp"
        android:src="@drawable/fmf_logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_join_group"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_below="@id/app_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:padding="0dp"
        android:text="Join group"
        android:textSize="16sp"
        style="@style/Widget.MaterialComponents.Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_create_group"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_below="@id/button_join_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:text="Create group"
        android:textSize="16sp"
        style="@style/Widget.MaterialComponents.Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_create_event"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_below="@id/button_create_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:text="Create event"
        android:textSize="16sp"
        style="@style/Widget.MaterialComponents.Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_manage_account"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_below="@id/button_create_event"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:text="Manage account"
        android:textSize="16sp"
        style="@style/Widget.MaterialComponents.Button" />

</RelativeLayout>